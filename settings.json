{
    // all default values are implied, including vim, I might add my vim settings later...
    "editor.lineNumbers": "relative",
    "vim.useSystemClipboard": true,
    "workbench.editor.enablePreview": true,
    "workbench.editor.showTabs": "single",
    "workbench.activityBar.location": "hidden",
    "editor.minimap.enabled": false,
    "java.debug.settings.showStaticVariables": false,
    "searchEverywhere.exclude": [  "**/.git",
                                 "**/.svn",
                                 "**/.hg",
                                 "**/.CVS",
                                 "**/.DS_Store",
                                 "**/package-lock.json",
                                 "**/yarn.lock",
                                 "**/node_modules/**",
                                 "**/bower_components/**",
                                 "**/coverage/**",
                                 "**/.vscode/**",
                                 "**/.vscode-test/**",
                                 "**/.history/**",
                                 "**/.cache/**",
                                 "**/.cache-loader/**",
                                 "**/out/**",
                                 "**/dist/**"],
    "searchEverywhere.include": "**/*.{js,jsx,ts,tsx,java,yml,xml,json,go,py}",
    "searchEverywhere.shouldInitOnStartup": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
      "statusBar.background": "#3c3836",
      "statusBar.foreground": "#ebdbb2",
      "statusBar.noFolderBackground": "#3c3836",
      "statusBar.debuggingBackground": "#ff8c1a",
      "statusBar.debuggingForeground": "#fbf1c7"
    },
    "workbench.colorTheme": "Gruvbox Dark Medium",
}
